<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="C64UViewer.Views.HelpWindow"
        Title="C64U Slim-Viewer - Instructions" Width="520" Height="550"
        Icon="/Assets/icon.ico"
        WindowStartupLocation="CenterOwner" Background="#1C1C1C" Foreground="White">

    <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="25">
        <TextBlock Grid.Row="0" Text="Instructions" FontSize="22" FontWeight="Bold" Foreground="#44A044" Margin="0,0,0,5"/>
        <Separator Grid.Row="1" Background="#44A044" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="2">
            <StackPanel Spacing="15">
                
                <Grid ColumnDefinitions="30,*">
                    <TextBlock Grid.Column="0" Text="1." FontWeight="Bold" Foreground="#44A044"/>
                    <SelectableTextBlock Grid.Column="1" TextWrapping="Wrap" 
                            Text="Ensure your Commodore 64 Ultimate (C64U) and this PC are in the same network."/>
                </Grid>

                <Grid ColumnDefinitions="30,*">
                    <TextBlock Grid.Column="0" Text="2." FontWeight="Bold" Foreground="#44A044"/>
                    <SelectableTextBlock Grid.Column="1" TextWrapping="Wrap" 
                            Text="Check your Firewall: Ensure that UDP Port 11000 (or your chosen port) is allowed for incoming traffic on this PC. On Windows, a firewall message will appear on first startup. On Linux, the standard port 11000 should already be open."/>
                </Grid>

                <Grid ColumnDefinitions="30,*">
                    <TextBlock Grid.Column="0" Text="3." FontWeight="Bold" Foreground="#44A044"/>
                    <SelectableTextBlock Grid.Column="1" TextWrapping="Wrap" 
                            Text="Note your PC's IP address (displayed at the top of the main window). You will need this for the next steps."/>
                </Grid>

                <Grid ColumnDefinitions="30,*">
                    <TextBlock Grid.Column="0" Text="4." FontWeight="Bold" Foreground="#44A044"/>
                    <SelectableTextBlock Grid.Column="1" TextWrapping="Wrap" 
                            Text="On your C64U: Connect your C64U to the LAN. Disable Wi-Fi under the main menu -> 'WIRED NETWORK SETUP'."/>
                </Grid>

                <Grid ColumnDefinitions="30,*">
                    <TextBlock Grid.Column="0" Text="5." FontWeight="Bold" Foreground="#44A044"/>
                    <SelectableTextBlock Grid.Column="1" TextWrapping="Wrap" 
                            Text="On your C64U: Open the menu F2 (SHIFT+F1) -> 'Data Streams' -> 'Stream VIC to' -> Enter your PC's IP address followed by the port number (default is 11000)."/>
                </Grid>

                <Grid ColumnDefinitions="30,*">
                    <TextBlock Grid.Column="0" Text="6." FontWeight="Bold" Foreground="#44A044"/>
                    <SelectableTextBlock Grid.Column="1" TextWrapping="Wrap" 
                            Text="On your C64U: Go to the main menu. Press F1 -> Streams -> VIC Stream -> Enter"/>
                </Grid>

                <Grid ColumnDefinitions="30,*">
                    <TextBlock Grid.Column="0" Text="7." FontWeight="Bold" Foreground="#44A044"/>
                    <SelectableTextBlock Grid.Column="1" TextWrapping="Wrap" 
                            Text="The status LED in this viewer will turn green as soon as data is received. The stream starts automatically!"/>
                </Grid>

            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="3" 
            Content="Close" 
            HorizontalAlignment="Center" 
            Padding="30,10"
            FontSize="16"
            FontWeight="Bold"
            Click="CloseClick" 
            Margin="0,20,0,0">
            <Button.Styles>
                <Style Selector="Button">
                    <Setter Property="Background" Value="#44A044" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
                <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                    <Setter Property="Background" Value="#55C055" />
                    <Setter Property="TextBlock.Foreground" Value="White" />
                </Style>
            </Button.Styles>
        </Button>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="3">
            <TextBlock Text="Created by GrÃ¼tze-Software" 
                    FontSize="10" 
                    Foreground="#888888" 
                    HorizontalAlignment="Right"/>
            <Button Content="Visit my Homepage on GitHub" 
                    FontSize="10" 
                    Foreground="#44A044"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Cursor="Hand"
                    Click="LinkClick">
                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="TextBlock.Foreground" Value="#55C055" />
                        <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                    </Style>
                </Button.Styles>
            </Button>
        </StackPanel>
    </Grid>    
</Window>